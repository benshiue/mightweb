- var MOKOVERSITY_VERSION = 1.0;
doctype html
html(data-cast-api-enabled="true")
  head
    block head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1.0,user-scalable=0')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(rel="icon", href='//cdn.mokoversity.com/images/moko365/mfavpng.ico', type='image/x-icon')
    link(href='//cdn.mokoversity.com/bootstrap/css/bootstrap.css', rel='stylesheet')
    link(href='//cdn.mokoversity.com/bootstrap/css/bootstrap-responsive.css', rel='stylesheet')
    link(href='//cdn.mokoversity.com/css/font-awesome.min.css', rel='stylesheet')
    link(href='//cdn.mokoversity.com/css/flat-ui.css?20130627', rel='stylesheet')
    link(href='/vendor/cast-chrome/demo_app.css', rel='stylesheet')
    block neck
  body(style='padding-top: 96px', ng-controller='DemoAppCtrl')
    .navbar.navbar-fixed-top
      .navbar-inner
        ul.nav
            li: a(href='/')
                span.fui-home &nbsp;mokoversity
            li: a(href='/course/android')
                span Android Skills
            li: a(href='/course/html5') HTML5 & Cloud
            li: a(href='/course/startup') Startup Talks
            - if (MOKOVERSITY_VERSION >= 2.0)
                li: a(href='/course/bigdata') BigData Skills
            li: a(href='/about') 關於
            if user
              li: a(href='/account') 我的帳戶
              li: a(href='/logout')
                span.fa.fa-user &nbsp;登出
            else
              li: a(href='/account')
                span.fa.fa-user &nbsp;登入
    block heading

    .container
        block body

    div.footer
      div.container
        div.inner
          span.copyright.pull-right
            &#169; #{copyrightYear} #{copyrightName}
          ul.links
            li: a(href='/') 首頁
            li: a(href='/about') 關於
            li: a(href='/signup') 註冊
            li: a(href='/contact') 連絡
            li: a(href='/about/terms') 服務條款
          div.clearfix

    script(src='http://cdn.mokoversity.com/js/jquery-1.8.3.min.js')
    script(src='http://cdn.mokoversity.com/bootstrap/js/bootstrap.min.js')
    script(src='http://cdn.mokoversity.com/js/jquery-ui-1.10.3.custom.min.js')
    script(src='http://cdn.mokoversity.com/js/jquery.ui.touch-punch.min.js')
    script(src='http://cdn.mokoversity.com/js/bootstrap-select.js')
    script(src='http://cdn.mokoversity.com/js/bootstrap-switch.js')
    script(src='http://cdn.mokoversity.com/js/flatui-checkbox.js')
    script(src='http://cdn.mokoversity.com/js/flatui-radio.js')
    script(src='http://cdn.mokoversity.com/js/jquery.tagsinput.js')
    script(src='http://cdn.mokoversity.com/js/jquery.placeholder.js')
    script(src='http://cdn.mokoversity.com/js/jquery.stacktable.js')
    script(src='http://cdn.mokoversity.com/js/application.js')
    script(src='http://cdn.mokoversity.com/js/h762plus.prototype.js', type='text/javascript')
    script(src='http://cdn.mokoversity.com/js/video.js')
    script(src='http://cdn.mokoversity.com/js/qrcode.js')
    script(src='http://cdn.mokoversity.com/js/jquery.videoplayer.js', type='text/javascript')
    script(src='http://cdn.mokoversity.com/vendor/underscore/underscore-min.js')
    script(src='/vendor/backbone/backbone.0.9.2.js')
    script(src='http://cdn.mokoversity.com/vendor/moment/moment.min.js')
    script(src='http://cdn.mokoversity.com/layouts/utility.js')
    script(src='http://cdn.mokoversity.com/buttons/course.json.js?20130627')
    script(src='http://cdn.mokoversity.com/js/main_default.js?20130627')
    script(src='http://cdn.mokoversity.com/js/google-analytics.js')
    script(src='/vendor/cast-chrome/demo_app.js')
    block feet
