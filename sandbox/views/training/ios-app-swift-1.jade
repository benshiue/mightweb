  .container
    section.row#ticket
      .col-md-12
        h3 線上購票
      .col-md-12
        iframe(title='活動通報名表', marginwidth='0', marginheight='0', frameborder='0', border='0', scrolling='no', src='http://www.accupass.com/event/shareregister/1407230805391722113186', width='100%', height='400px')

  article
